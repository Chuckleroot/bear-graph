{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "@styled-system/*": ["styled-system/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "forge.config.ts",
    "styled-system",
    "src/renderer/renderer.tsx",
    "src/renderer/renderer.tsx",
    "src/renderer/.js",
    "src/renderer/ui/index.tsx",
    "src/main/bear-db.js",
    "src/main/bear-db.js"
  ]
}
